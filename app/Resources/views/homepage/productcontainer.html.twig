<div class="row">
    {% for house in houses %}
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="thumbnail">
                <div id="myCarousel{{ loop.index0 }}" class="carousel slide" data-interval="false" data-ride="carousel">
                    <div class="carousel-inner">
                        {% for image in house.images %}
                            {% if loop.first %}
                                <div class="item active">
                                    {% set imageSrc = '/upload/house/' ~ image.imageName %}
                                    <img src="{{ asset(imageSrc) }}" class="img-responsive" alt="
                                    {% if newLng == 'en' %}
                                       {{ house.title }}">
                                    {% elseif newLng == 'ru' %}
                                        {{ house.titleRu }}">
                                    {% else %}
                                        {{ house.titleAr }}">
                                    {% endif %}
                                </div>
                            {% endif %}
                            {% if not loop.first %}
                                <div class="item">
                                    {% set imageSrc = '/upload/house/' ~ image.imageName %}
                                    <img src="{{ asset(imageSrc) }}" class="img-responsive" alt="
                                    {% if newLng == 'en' %}
                                       {{ house.title }}">
                                    {% elseif newLng == 'ru' %}
                                        {{ house.titleRu }}">
                                    {% else %}
                                        {{ house.titleAr }}">
                                    {% endif %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <a class="left carousel-control" href="#myCarousel{{ loop.index0 }}" data-slide="prev">
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                    </a>
                    <a class="right carousel-control" href="#myCarousel{{ loop.index0 }}" data-slide="next">
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                    </a>
                </div>
                <div class="caption text-left">
                    <h4>
                        <a href="{{ path('product', {'name' : house.name, '_locale': newLng}) }}">
                            {% if newLng == 'en' %}
                                {{ house.title }}
                            {% elseif newLng == 'ru' %}
                                {{ house.titleRu }}
                            {% else %}
                                {{ house.titleAr }}
                            {% endif %}
                        </a>
                    </h4>
                    <h6>$
                        {% if house.idSalesRent.title == 'Buy'  %}
                            {{ house.priceSale }}
                        {% elseif priceType == 'Buy' %}
                            {{ house.priceSale }}
                        {% else %}
                            {{ house.priceRent }} / {{ month }}
                        {% endif %}
                    </h6>
                    <p class="description">
                        {% if newLng == 'en' %}
                            {{ house.description }}
                        {% elseif newLng == 'ru' %}
                            {{ house.descriptionRu }}
                        {% else %}
                            {{ house.descriptionAr }}
                        {% endif %}
                        <a href="{{ path('product', {'name' : house.name, '_locale': newLng}) }}">[more]</a>
                    </p>
                    <div class="row icons">
                        {% if house.countBed != 0 %}
                            <div class="col-xs-3 text-left">
                                <img src="{{ asset('bundles/house/img/bedroom.png') }}" alt="bedroom"><span>{{ house.countBed }}</span>
                            </div>
                        {% endif %}
                        {% if house.countBath != 0 %}
                            <div class="col-xs-3 text-center">
                                <img src="{{ asset('bundles/house/img/bath.png') }}" alt="bath"><span>{{ house.countBath }}</span>
                            </div>
                        {% endif %}
                        <div class="col-offset-xs-1 col-xs-5 text-right">
                            <img src="{{ asset('bundles/house/img/sq.png') }}" alt="sq"><span>{{ house.sq}} Sq Ft</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>