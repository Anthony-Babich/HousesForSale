<section id="contact-us-main">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-4 left-contact">
                <p class="address"><i class="fa fa-map-marker text-right" aria-hidden="true"></i> {{ address }}</p>
                {% for phone in phones %}
                    <p class="phone"><i class="fa fa-phone text-right" aria-hidden="true"></i> {{ phone.setting }}</p>
                {% endfor %}
                <p class="mail"><i class="fa fa-envelope text-right" aria-hidden="true"></i> {{ email }}</p>
            </div>
            <div class="col-xs-12 col-md-8 text-main">
                {% for contactusdesc in contactusdesc %}
                    {{ contactusdesc.setting }}
                {% endfor %}
            </div>
        </div>
    </div>
</section>