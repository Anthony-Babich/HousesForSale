<section id="product">
    <div class="container" id="main">
        <div class="row">
            <div class="col-xs-12 col-lg-9">
                <div class="row" style="margin-left: -30px; margin-right: -30px;">
                    <div class="col-xs-12">
                        <div id="example3" class="slider-pro">
                            <div class="sp-slides">
                                {% for image in house.images %}
                                    <div class="sp-slide">
                                        {% set imageSrc = 'upload/house/' ~ image.imageName %}
                                        <img class="sp-image" src="{{ imageSrc }}"/>
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="sp-thumbnails">
                                {% for image in house.imagesSmall %}
                                    {% set imageSrc = 'upload/house/' ~ image.imageName %}
                                    <img class="sp-thumbnail" src="{{ imageSrc }}"/>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <h3>{{ house.street }}</h3>
                        <h6 class="address">{{ house.street }}</h6>
                    </div>
                </div>
                <div class="row" id="price-button">
                    <div class="col-xs-12 text-left">
                        <button class="btn-blue-price">
                            {% if house.priceSale is not null %}
                                {{ house.priceSale }}
                            {% elseif priceType is not null %}
                                {{ house.priceRent }} / per day
                            {% endif %}
                        </button>
                        {% if house.sq != 0 %}
                            <img src="{{ asset('bundles/house/img/sq.png') }}" alt="sq" class="icons"><span>{{ house.sq}} Sq Ft</span>
                        {% endif %}
                        {% if house.countBed != 0 %}
                            <img src="{{ asset('bundles/house/img/bedroom.png') }}" alt="bedroom" class="icons"><span>{{ house.countBed }}</span>
                        {% endif %}
                        {% if house.countBath != 0 %}
                            <img src="{{ asset('bundles/house/img/bath.png') }}" alt="bath" class="icons"><span>{{ house.countBath }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 text-left">
                        <p class="desc">
                            {{ house.description }}
                        </p>
                    </div>
                </div>
                <hr size="1px" style="color: #dedede; margin-left: -15px; margin-top: 10px;" width="calc(100%+15px);">
                <div class="row">
                    <div class="col-xs-12 text-left">
                        <h4 class="head">additional details</h4>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                {% set count = (house.adDetails|length / 2)|round %}
                                {% for i in 0..count-1 %}
                                    <tr>
                                        <th class="col-xs-2">{{ house.adDetails[i].name }}</th>
                                        <td class="col-xs-4">{{ house.adDetails[i].feature }}</td>
                                        {% if house.adDetails|length > i+count %}
                                            <th class="col-xs-2">{{ house.adDetails[i+count].name }}</th>
                                            <td class="col-xs-4">{{ house.adDetails[i+count].feature }}</td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
                <hr size="1px" style="color: #dedede; margin-left: -15px; margin-top: 10px;" width="calc(100%+15px);">
                <div class="row" id="product-feature">
                    <div class="col-xs-12 text-left">
                        <h4 class="head">Features</h4>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                {% set count = (house.features|length / 3)|round %}
                                {% for i in 0..count-1 %}
                                    <tr>
                                        <td class="col-xs-3"><i class="fa fa-check-circle" aria-hidden="true"></i> {{ house.features[i].name }}</td>
                                        <td class="col-xs-3"><i class="fa fa-check-circle" aria-hidden="true"></i> {{ house.features[i+count].name }}</td>
                                        <td class="col-xs-3"><i class="fa fa-check-circle" aria-hidden="true"></i> {{ house.features[i+count+count].name }}</td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
                <hr size="1px" style="color: #dedede; margin-left: -15px; margin-top: 10px;" width="calc(100%+15px);">
                <div class="row">
                    <div class="col-xs-12" id="location">
                        <h4 class="head">location</h4>
                        <div id="map" style="width: 100%; height: 300px;"></div>
                        <div id="buttons">
                            <button>Share this</button>
                            <button type="button"><i class="fa fa-facebook" aria-hidden="true"></i>facebook</button>
                            <button type="button"><i class="fa fa-twitter" aria-hidden="true"></i>twitter</button>
                        </div>
                    </div>
                </div>
                <hr size="1px" style="color: #dedede; margin-left: -15px; margin-top: 30px;" width="calc(100%+15px);">
                {% include 'Product/formContactUS.html.twig' %}
            </div>
            <div class="col-xs-12 col-lg-3">
                {% include 'Product/features.html.twig' %}
            </div>
        </div>
    </div>
    {% include 'Product/similarProperties.html.twig' %}
</section>

{% block map %}
    <script type="text/javascript">
        function initMap() {
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 15,
                center: {lat: {{ house.latitude }}, lng: {{ house.longitude }}}
            });
            var marker = new google.maps.Marker({
                position: {lat: {{ house.latitude }}, lng: {{ house.longitude }}},
                map: map
            });
        }
    </script>
{% endblock %}