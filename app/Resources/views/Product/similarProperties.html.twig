<div class="container" id="more-prod">
    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-11">
                    <h3 class="head">{{ 'similar'|trans }}</h3>
                    <div class="more-prod">
                        {% for similar in similarProperties %}
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <div class="thumbnail">
                                    <div id="myCarousel{{ loop.index0 }}" class="carousel slide" data-interval="false" data-ride="carousel">
                                        <div class="carousel-inner">
                                            {% for image in similar.images %}
                                                {% if loop.first %}
                                                    <div class="item active">
                                                        {% set imageSrc = 'upload/house/' ~ image.imageName %}
                                                        <img src="{{ asset(imageSrc) }}" class="img-responsive" alt="
                                                        {% if lan == 'en' %}
                                                           {{ similar.title }}">
                                                        {% elseif lan == 'ru' %}
                                                            {{ similar.titleRu }}">
                                                        {% else %}
                                                            {{ similar.titleAr }}">
                                                        {% endif %}
                                                    </div>
                                                {% endif %}
                                                {% if not loop.first %}
                                                    <div class="item">
                                                        {% set imageSrc = 'upload/house/' ~ image.imageName %}
                                                        <img src="{{ asset(imageSrc) }}" class="img-responsive" alt="
                                                        {% if lan == 'en' %}
                                                           {{ similar.title }}">
                                                        {% elseif lan == 'ru' %}
                                                            {{ similar.titleRu }}">
                                                        {% else %}
                                                            {{ similar.titleAr }}">
                                                        {% endif %}
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                        <a class="left carousel-control" href="#myCarousel{{ loop.index0 }}1" data-slide="prev">
                                            <i class="fa fa-angle-left" aria-hidden="true"></i>
                                        </a>
                                        <a class="right carousel-control" href="#myCarousel{{ loop.index0 }}" data-slide="next">
                                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                    <div class="caption text-left">
                                        <a href="{{ path('product', {'name' : similar.name}) }}">
                                            <h4>
                                                {% if lan == 'en' %}
                                                    {{ similar.title }}
                                                {% elseif lan == 'ru' %}
                                                    {{ similar.titleRu }}
                                                {% else %}
                                                    {{ similar.titleAr }}
                                                {% endif %}
                                            </h4>
                                        </a>
                                        <h6>$
                                            {% if similar.idSalesRent.title == 'Buy'  %}
                                                {{ house.priceSale }}
                                            {% elseif type == 'Buy' %}
                                                {{ similar.priceSale }}
                                            {% else %}
                                                {{ similar.priceRent }} / {{ 'month'|trans }}
                                            {% endif %}
                                        </h6>
                                        <p class="description">
                                            {% if lan == 'en' %}
                                                {{ similar.description }}
                                            {% elseif lan == 'ru' %}
                                                {{ similar.descriptionRu }}
                                            {% else %}
                                                {{ similar.descriptionAr }}
                                            {% endif %}
                                            <a href="{{ path('product', {'name' : similar.name}) }}">[more]</a>
                                        </p>
                                        <div class="row icons">
                                            {% if similar.countBed != 0 %}
                                                <div class="col-xs-3 text-left">
                                                    <img src="{{ asset('bundles/house/img/bedroom.png') }}" alt="bedroom"><span>{{ similar.countBed }}</span>
                                                </div>
                                            {% endif %}
                                            {% if similar.countBath != 0 %}
                                                <div class="col-xs-3 text-center">
                                                    <img src="{{ asset('bundles/house/img/bath.png') }}" alt="bath"><span>{{ similar.countBath }}</span>
                                                </div>
                                            {% endif %}
                                            <div class="col-offset-xs-1 col-xs-5 text-right">
                                                <img src="{{ asset('bundles/house/img/sq.png') }}" alt="sq"><span>{{ similar.sq}} Sq Ft</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>