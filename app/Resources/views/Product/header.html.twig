<section id="header" class="hidden-xs hidden-sm">
    <div class="container">
        <div class="row" id="land-text">
            <div class="col-md-12">
                <h2 class="text-left">{{ 'property.detail'|trans }}
                    {% set lan = app.request.getLocale() %}
                    {% if lan == 'en' %}
                        {{ house.title|raw }}
                    {% elseif lan == 'ru' %}
                        {{ house.titleRu|raw }}
                    {% else %}
                        {{ house.titleAr|raw }}
                    {% endif %}
                </h2>
                {{ wo_render_breadcrumbs({separator: ''})  }}
            </div>
        </div>
    </div>
</section>