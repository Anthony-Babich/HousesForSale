<footer>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-3 first-col">
                <h5 class="head">{{ 'contact.info'|trans }}</h5>
                <p><img src="{{ asset('bundles/house/img/logo-footer.png') }}" alt="logo-footer"></p>
                <p class="desc"> {{ footerdesc }}</p>
                <p class="address"><i class="fa fa-map-marker text-right" aria-hidden="true"></i> {{ address }}</p>
                {% for phone in phones %}
                    <p class="phone"><i class="fa fa-phone text-right" aria-hidden="true"></i> {{ phone.setting }}</p>
                {% endfor %}
                <p class="mail"><i class="fa fa-envelope text-right" aria-hidden="true"></i> {{ email }}</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3 second-col">
                <h5 class="head">{{ 'quicklinks'|trans }}</h5>
                <p><a href="{{ path('homepage') }}" title="home">{{ 'home'|trans }}</a></p>
                <p><a href="{{ path('parameter', {'parameter': 'Buy'}) }}" title="Buy">{{ 'buy'|trans }}</a></p>
                <p><a href="{{ path('parameter', {'parameter': 'Rent'}) }}" title="rent">{{ 'rent'|trans }}</a></p>
                <p><a href="{{ path('contact') }}" title="contacts">{{ 'contact'|trans }}</a></p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3 third-col">
                <h5 class="head">
                    facebook <i class="fa fa-facebook" aria-hidden="true"></i>
                </h5>
                <div id="facebook">
                    <div class="fb-page" data-href="https://www.facebook.com/layan.emlak/" data-tabs="timeline" data-height="300" data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/layan.emlak/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/layan.emlak/">‎ليان للعقارات في تركيا‎</a></blockquote></div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3 last-col">
                <h5 class="head">
                    twitter <i class="fa fa-twitter" aria-hidden="true"></i>
                </h5>
                <div class="twitter">
                    <a class="twitter-timeline" href="https://twitter.com/Layan_realstate?ref_src=twsrc^tfw">
                        Tweets by Layan_realstate
                    </a>
                    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                </div>
            </div>
        </div>
    </div>
</footer>